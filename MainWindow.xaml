<Window x:Class="SimpleWpfMvvmAppV8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SimpleWpfMvvmAppV8.ViewModels"
        xmlns:views="clr-namespace:SimpleWpfMvvmAppV8.Views"
        Title="Simple WPF App" Height="450" Width="800">
    
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:HomeViewModel}">
            <views:HomePage />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:UsersViewModel}">
            <views:UsersPage />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AddUserViewModel}">
            <views:AddUserPage />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ProductsViewModel}">
            <views:ProductsPage />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AddEditProductViewModel}">
            <views:AddEditProductPage />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AboutViewModel}">
            <views:AboutPage />
        </DataTemplate>
    </Window.Resources>
    
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="LightGray">
            <Button Content="Home" Command="{Binding NavigateHomeCommand}" Margin="5"/>
            <Button Content="Users" Command="{Binding NavigateUsersCommand}" Margin="5"/>
            <Button Content="Add User" Command="{Binding NavigateAddUserCommand}" Margin="5"/>
            <Button Content="Products" Command="{Binding NavigateProductsCommand}" Margin="5"/>
            <Button Content="Add Product" Command="{Binding NavigateAddProductCommand}" Margin="5"/>
            <Button Content="About" Command="{Binding NavigateAboutCommand}" Margin="5"/>
        </StackPanel>
        <ContentControl Content="{Binding CurrentViewModel}" />
    </DockPanel>
</Window>
