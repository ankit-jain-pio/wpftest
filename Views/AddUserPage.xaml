<UserControl x:Class="SimpleWpfMvvmAppV8.Views.AddUserPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Name:" />
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
            <TextBlock Text="Email:" />
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="0,5"/>
            <Button Content="Add User" Command="{Binding AddUserCommand}" Margin="0,10"/>
            <TextBlock Text="{Binding Message}" Foreground="{Binding MessageForeground}"/>
        </StackPanel>
    </Grid>
</UserControl>
